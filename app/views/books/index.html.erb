<h1>This is a Book Library</h1>
<p>All book Details here </p>


<p><mark>Listing book details</p>

<table class="table table-hover">
<thead>
  <tr>
    <th scope="col">BOOK-NAME</th>
    <th scope="col">AUTHOR NAME</th>
    <th scope="col" >ASSIGN BY</th>
    <th scope="col" >SELL BY</th>
    <th scope="col" >Action</th>
  </tr></thead>
<% @books.each do |book| %>
    <tr>
      <td scope="row" ><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.assign %></td>
      <td><%= book.sell %></td>
      <td><%= link_to 'edit',edit_book_path(book),class:"btn btn-warning" %>
      <%= link_to 'delete',book_path(book), method: :delete, class:"btn btn-danger" %>
      <%= link_to 'show' , book_path(book), class:"btn btn-info" %>
      </td>
    </tr>
<% end %>
</table>
<%= link_to "+New book", new_book_path , class:"btn btn-success" %>